<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.InstagramUI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item> <!--Tool bar, Button-->
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item> <!--Float Button, Check colors-->
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_screen</item>
        <item name="android:windowLightStatusBar">true
        </item> <!-- Light StatusBar API 23 (android 6)-->

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/background_screen</item>
        <item name="android:windowLightNavigationBar">true
        </item> <!-- Light NavigationBar API 27 (android 8.1) -->

        <item name="android:windowDisablePreview">true</item>
        <item name="android:dialogTheme">@style/Theme.DialogFullScreen</item>
    </style>

    <!-- Dialog Theme -->
    <style name="Theme.DialogFullScreen" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>
</resources>