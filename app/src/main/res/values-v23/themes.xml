<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.InstagramUI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item> <!--Tool bar, Button-->
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item> <!--Float Button, Check colors-->
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_screen</item>
        <item name="android:windowLightStatusBar">true
        </item> <!-- Light StatusBar API 23 (android 6)-->

        <item name="android:windowDisablePreview">true</item>
    </style>
</resources>